<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        app:title="@string/app_name"
        android:id="@+id/toolbar"
        app:layout_collapseMode="pin"
        app:titleTextAppearance="@style/App.TextAppearance.h4.Title"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/md_black_1000"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_txt_count"
            android:layout_width="@dimen/length_36"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/offset_8"
            android:textColor="@color/md_black_1000"
            android:background="@drawable/dr_rect_round_light_grey"
            android:padding="@dimen/offset_4"
            android:text="0"
            android:textSize="@dimen/font_16"/>

    </androidx.appcompat.widget.Toolbar>
</LinearLayout>